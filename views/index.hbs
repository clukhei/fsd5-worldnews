<form action="/submit" method="POST">
    <div class="form-group">
        <label for="search-news">
            <h1>News Search</h1>
        </label>
        <input type="text" name="search" id="search-news" class="form-control">
    </div>
    <div class="form-check">
        <input type="radio" name="country" class="form-check-input" id="singapore" value="sg">
        <label for="singapore" class="form-check-label">Singapore</label>
    </div>
    <div class="form-check">
        <input type="radio" name="country" class="form-check-input" id="usa" value="us">
        <label for="usa" class="form-check-label">USA</label>
    </div>
    <div class="form-check">
        <input type="radio" name="country" class="form-check-input" id="uk" value="uk">
        <label for="uk" class="form-check-label">UK</label>
    </div>
    <div class="form-check">
        <input type="radio" name="country" class="form-check-input" id="france" value="fr">
        <label for="france" class="form-check-label">France</label>
    </div>
    <div class="form-check">
        <input type="radio" name="country" class="form-check-input" id="china" value="cn">
        <label for="china" class="form-check-label">China</label>
    </div>
    <div class="form-check">
        <input type="radio" name="country" class="form-check-input" id="japan" value="jp">
        <label for="japan" class="form-check-label">Japan</label>
    </div>
    <div class="form-group">
        <select class="form-control" id="exampleFormControlSelect1" name="category">
            <option value="business">Business</option>
            <option value="general">General</option>
            <option value="health">Health</option>
            <option value="entertainment">Entertainment</option>
            <option value="sports">Sports</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input type="hidden" name="searchState" value ="{{searchState}}" id="searchState">
</form>

<div>
{{#each articlesArr}}
<div>
    <h3>{{this.title}}</h3>
    <img src="{{this.urlToImage}}" alt="image" width="500px" height="400px">
    <p>{{this.description}}</p>
    <div class="d-flex justify-content-between">
    <code>{{this.publishedAt}}</code>
    <a href="{{this.url}}">Read</a>
    </div>
</div>
{{/each}}
</div>